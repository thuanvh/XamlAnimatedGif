<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <TargetFrameworks>net40</TargetFrameworks>
    <OutputType>WinExe</OutputType>
    <UseWPF>true</UseWPF>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>../XamlAnimatedGif/XamlAnimatedGif.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net40'">
    <Reference Include="PresentationCore" />
    <Reference Include="PresentationFramework" />
    <Reference Include="WindowsBase" />
    <Reference Include="System.Xaml" />
    <Reference Include="System.Net.Http" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../XamlAnimatedGif/XamlAnimatedGif.csproj" />
	  <PackageReference Include="Microsoft.Net.Http" Version="2.2.29" PrivateAssets="All" />
	  <PackageReference Include="Microsoft.Bcl.Async" Version="1.0.168" PrivateAssets="All" />

  </ItemGroup>

  <ItemGroup>
    <Resource Include="Images/*" />
  </ItemGroup>

</Project>